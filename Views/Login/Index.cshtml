@model LoginModel
@{

    Layout = "_Layout-Logout";
    ViewData["Title"] = "Login";
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="login" class="col-form-label">Email</label>
            <input type="text" id="login" class="form-control" asp-for="Login">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
    </div>
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label for="login" class="col-form-label">Senha</label>
            <input type="text" id="login" class="form-control" asp-for="Senha">
             @Html.ValidationMessageFor(x => x.Senha)
        </div>
    </div>
    <div class="row g-3 align-items-center mt-1">
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Entrar</button>
        </div>
    </div>
</form>